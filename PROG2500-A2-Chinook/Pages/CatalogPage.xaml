<Page x:Class="PROG2500_A2_Chinook.Pages.CatalogPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:local="clr-namespace:PROG2500_A2_Chinook.Pages"
      Title="Catalog">

    <Page.Resources>
        <CollectionViewSource x:Key="groupedCatalog" />
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="10">
            <TextBlock Text="Music Catalog" FontWeight="Bold" FontSize="16" VerticalAlignment="Center" Margin="0,0,10,0"/>
            <TextBox x:Name="searchBox" Width="200" Margin="0,0,5,0"/>
            <Button Content="Search" Click="Search_Click"/>
        </StackPanel>

        <ListView Grid.Row="1" ItemsSource="{Binding Source={StaticResource groupedCatalog}}">
            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Key}" FontWeight="Bold" FontSize="18" Margin="5"/>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Expander Header="{Binding Key}">
                        <ItemsControl ItemsSource="{Binding Artists}">
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <!-- Indent Artists -->
                                    <Expander Header="{Binding ArtistName}" Margin="20,0,0,0">
                                        <ItemsControl ItemsSource="{Binding Albums}">
                                            <ItemsControl.ItemTemplate>
                                                <DataTemplate>
                                                    <!-- Indent Albums -->
                                                    <Expander Header="{Binding AlbumTitle}" Margin="40,0,0,0">
                                                        <ItemsControl ItemsSource="{Binding Tracks}">
                                                            <ItemsControl.ItemTemplate>
                                                                <DataTemplate>
                                                                    <!-- Indent tracks -->
                                                                    <TextBlock Text="{Binding}" Margin="60,0,0,0"/>
                                                                </DataTemplate>
                                                            </ItemsControl.ItemTemplate>
                                                        </ItemsControl>
                                                    </Expander>
                                                </DataTemplate>
                                            </ItemsControl.ItemTemplate>
                                        </ItemsControl>
                                    </Expander>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </Expander>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </Grid>
</Page>
