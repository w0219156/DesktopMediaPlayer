<Page x:Class="PROG2500_A2_Chinook.Pages.AlbumsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:PROG2500_A2_Chinook.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Chinook Albums">

    <Page.Resources>
        <CollectionViewSource x:Key="albumVS"/>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
           
            <RowDefinition Height="*"/>
            
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="Chinook Albums" FontWeight="Bold" FontSize="20" Margin="10"/>
        <DataGrid Grid.Row="1"
                  ItemsSource="{Binding Source={StaticResource albumVS}}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="ID" Binding="{Binding AlbumId}"/>
                <DataGridTextColumn Header="Album" Binding="{Binding Title}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</Page>
